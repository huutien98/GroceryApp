<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">


    <RelativeLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp"
        android:background="@drawable/shape_layout_sign_up"
        android:layout_width="match_parent"
        android:layout_height="380dp">

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/grey"
            android:layout_alignParentStart="true"
            android:text="Sign in"
            android:id="@+id/tv_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/greenStart"
            android:text="Sign up"
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_wellcome_sign_up"
            android:layout_marginStart="10dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_below="@+id/tv_sign_up"
            android:text="Welcome to Grocery App"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_lets"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tv_wellcome_sign_up"
            android:textColor="@color/grey"
            android:text="Let's get started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColorHint="@color/grey"
            android:hint="Username"
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lets" />

        <androidx.appcompat.widget.AppCompatEditText
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColorHint="@color/grey"
            android:hint="Email address"
            android:layout_below="@+id/edt_username"
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_email"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <androidx.appcompat.widget.AppCompatButton
            android:elevation="10dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:background="@color/greenStart"
            android:text="SIGN UP" />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>